<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="650" prefWidth="1050" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.studentmanagementsystem.controller.GlobalFormController">

    <!-- Left Sidebar (Toggle Bar) -->
    <left>
        <VBox prefWidth="220" style="-fx-background-color: #cdcdcd;">
            <Label lineSpacing="5.0" prefHeight="0.0" prefWidth="220.0" style="-fx-text-fill: black; -fx-font-size: 20px; -fx-padding: 20 0 20 20; -fx-font-family: impact;" text="STUDENT MANAGEMENT" textAlignment="CENTER" textFill="#18514e"/>
            <Button fx:id="btnHome" alignment="CENTER" onAction="#btnHomeOnAction" prefHeight="45.0" prefWidth="135.0" style="-fx-background-color: black; -fx-text-fill: white; -fx-font-size: 16px; -fx-alignment: CENTER; -fx-padding: 10; -fx-font-family: impact;" text="Home">
                <VBox.margin>
                    <Insets bottom="25.0" left="40.0"/>
                </VBox.margin>
                <font>
                    <Font name="Impact" size="12.0"/>
                </font>
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
            </Button>
            <Button fx:id="btnStudents" alignment="CENTER" layoutX="53.0" onAction="#btnStudentsOnAction" prefWidth="135.0" style="-fx-background-color: black; -fx-text-fill: white; -fx-font-size: 16px; -fx-alignment: CENTER; -fx-padding: 10; -fx-font-family: impact;" text="Students">
                <VBox.margin>
                    <Insets bottom="25.0" left="40.0"/>
                </VBox.margin>
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
            </Button>
            <Button fx:id="btnCourse" alignment="CENTER" layoutX="53.0" onAction="#btnCousrseOnAction" prefWidth="135.0" style="-fx-background-color: black; -fx-text-fill: white; -fx-font-size: 16px; -fx-alignment: CENTER; -fx-padding: 10; -fx-font-family: impact;" text="Courses">
                <VBox.margin>
                    <Insets bottom="25.0" left="40.0"/>
                </VBox.margin>
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
            </Button>
            <Button fx:id="btnPurchase" alignment="CENTER" layoutX="53.0" onAction="#btnPurchaseOnAction" prefWidth="135.0" style="-fx-background-color: black; -fx-text-fill: white; -fx-font-size: 16px; -fx-alignment: CENTER; -fx-padding: 10; -fx-font-family: impact;" text="Purchase">
                <VBox.margin>
                    <Insets bottom="25.0" left="40.0"/>
                </VBox.margin>
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
            </Button>
            <ImageView fitHeight="266.0" fitWidth="218.0">
                <image>
                    <Image url="@../assests/image/Global-Pane.png"/>
                </image>
            </ImageView>
            <Button fx:id="btnLogout" onAction="#btnLogoutOnAction" prefWidth="135.0" style="-fx-background-color: black; -fx-text-fill: white; -fx-font-size: 16px; -fx-alignment: CENTER; -fx-padding: 10; -fx-font-family: impact;" text="Logout">
                <VBox.margin>
                    <Insets bottom="25.0" left="40.0"/>
                </VBox.margin>
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
            </Button>
        </VBox>
    </left>

</BorderPane>
