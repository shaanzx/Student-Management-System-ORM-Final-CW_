<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.SVGPath?>

<StackPane prefHeight="650" prefWidth="830" style="-fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.studentmanagementsystem.controller.PurchaseFormController">

    <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 10;">
        <effect>
            <DropShadow color="#00000022" radius="10" spread="0.1" />
        </effect>

        <!-- Header with Title and Time -->
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label style="-fx-font-family: 'Impact'; -fx-font-size: 28px; -fx-text-fill: #555;" text="Purchase Management" HBox.hgrow="ALWAYS" />
            <Region HBox.hgrow="ALWAYS" />
            <HBox alignment="CENTER_RIGHT" spacing="5">
                <SVGPath content="M12 2C6.5 2 2 6.5 2 12s4.5 10 10 10 10-4.5 10-10S17.5 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8zm.5-13H11v6l5.2 3.2.8-1.3-4.5-2.7V7z" fill="#555" />
                <Label fx:id="timeLabel" style="-fx-font-family: 'Impact'; -fx-font-size: 16px; -fx-text-fill: #555;" />
            </HBox>
        </HBox>

        <!-- Course Details Form -->
        <VBox spacing="10" style="-fx-background-color: #f0f0f0; -fx-padding: 15; -fx-background-radius: 5;">
            <Label style="-fx-font-family: 'Impact'; -fx-font-size: 18px; -fx-text-fill: #333;" text="Course Details" />
            <HBox spacing="10">
                <ComboBox fx:id="courseNameComboBox" promptText="Select Course" style="-fx-font-family: 'Impact'; -fx-font-size: 14px;" HBox.hgrow="ALWAYS" />
                <TextField fx:id="courseIdField" editable="false" promptText="Course ID" style="-fx-font-family: 'Impact'; -fx-font-size: 14px;" HBox.hgrow="ALWAYS" />
                <TextField fx:id="courseFeeField" editable="false" promptText="Course Fee" style="-fx-font-family: 'Impact'; -fx-font-size: 14px;" HBox.hgrow="ALWAYS" />
                <TextField fx:id="courseDurationField" editable="false" promptText="Duration" style="-fx-font-family: 'Impact'; -fx-font-size: 14px;" HBox.hgrow="ALWAYS" />
            </HBox>
        </VBox>

        <!-- Student Details Form -->
        <VBox spacing="10" style="-fx-background-color: #f0f0f0; -fx-padding: 15; -fx-background-radius: 5;">
            <Label style="-fx-font-family: 'Impact'; -fx-font-size: 18px; -fx-text-fill: #333;" text="Student Details" />
            <HBox spacing="10">
                <TextField fx:id="studentNicField" promptText="NIC No" style="-fx-font-family: 'Impact'; -fx-font-size: 14px;" HBox.hgrow="ALWAYS" />
                <Button onAction="#searchStudent" style="-fx-font-family: 'Impact'; -fx-font-size: 14px; -fx-background-color: black; -fx-text-fill: #4CAF50;" text="Search" />
            </HBox>
            <HBox spacing="10">
                <TextField fx:id="studentNameField" editable="false" promptText="Student Name" style="-fx-font-family: 'Impact'; -fx-font-size: 14px;" HBox.hgrow="ALWAYS" />
                <TextField fx:id="studentTelField" editable="false" promptText="Student Tel" style="-fx-font-family: 'Impact'; -fx-font-size: 14px;" HBox.hgrow="ALWAYS" />
                <TextField fx:id="studentEmailField" editable="false" promptText="Student Email" style="-fx-font-family: 'Impact'; -fx-font-size: 14px;" HBox.hgrow="ALWAYS" />
            </HBox>
        </VBox>

        <!-- Purchase Form -->
        <VBox spacing="10" style="-fx-background-color: #f0f0f0; -fx-padding: 15; -fx-background-radius: 5;">
            <Label style="-fx-font-family: 'Impact'; -fx-font-size: 18px; -fx-text-fill: #333;" text="Purchase Details" />
            <HBox spacing="10">
                <TextField fx:id="purchaseIdField" promptText="Purchase ID" style="-fx-font-family: 'Impact'; -fx-font-size: 14px;" HBox.hgrow="ALWAYS" />
                <TextField fx:id="advancePaymentField" promptText="Advance Payment" style="-fx-font-family: 'Impact'; -fx-font-size: 14px;" HBox.hgrow="ALWAYS" />
                <TextField fx:id="balanceField" editable="false" promptText="Balance" style="-fx-font-family: 'Impact'; -fx-font-size: 14px;" HBox.hgrow="ALWAYS" />
                <DatePicker fx:id="purchaseDatePicker" promptText="Date" style="-fx-font-family: 'Impact'; -fx-font-size: 14px;" HBox.hgrow="ALWAYS" />
            </HBox>
            <Button onAction="#addToCart" style="-fx-font-family: 'Impact'; -fx-font-size: 14px; -fx-background-color: black; -fx-text-fill: #2196F3;" text="Add to Cart" />
        </VBox>

        <!-- Course Details Table -->
        <TableView fx:id="courseDetailsTable" style="-fx-font-family: 'Impact'; -fx-font-size: 14px;" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="courseNameColumn" text="Course Name" />
                <TableColumn fx:id="courseIdColumn" text="Course ID" />
                <TableColumn fx:id="feeColumn" text="Fee" />
                <TableColumn fx:id="durationColumn" text="Duration" />
                <TableColumn fx:id="advanceColumn" text="Advance" />
                <TableColumn fx:id="balanceColumn" text="Balance" />
            </columns>
        </TableView>

        <!-- Buy Course and Purchase Details Buttons in One Row -->
        <HBox alignment="TOP_RIGHT" spacing="10">
            <Button onAction="#buyCourse" style="-fx-font-family: 'Impact'; -fx-font-size: 16px; -fx-background-color: black; -fx-text-fill: #4CAF50; -fx-padding: 10 20;" text="Buy Course" />
            <Button onAction="#addPurchaseDetails" style="-fx-font-family: 'Impact'; -fx-font-size: 16px; -fx-background-color: black; -fx-text-fill: #FF9800; -fx-padding: 10 20;" text="Add Purchase Details" />
        </HBox>

    </VBox>
</StackPane>
